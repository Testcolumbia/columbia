/*
 * This method is used to Login to the Social viewer portal.
 */

package com.qa.columbia.functions;

import java.util.Calendar;
import java.util.Date;

import com.qa.columbia.repository.*;
import com.qa.columbia.executor.*;
import com.thoughtworks.selenium.*;

public class Login_SVP extends TesterAsserter 
{
	public static void test_LoginSVP(Selenium sel, String str_Username, String str_Password) throws Exception 
	{
        Utility_Functions utilityFunction = new Utility_Functions();    	
        //Fetching values for Global Variables from XMl file
        String str_path ="Global_variables.xml";
        Date date=Calendar.getInstance().getTime();
	    String VAR_MED_WAIT = utilityFunction.GetValue(str_path ,"VAR_MED_WAIT") ;
		sel.click(EnvObjectMap_Rep.lnk_LoginSVP);
		utilityFunction.waitForChangesToReflect();
		sel.type(EnvObjectMap_Rep.txt_userNameSVP, str_Username);
		sel.type(EnvObjectMap_Rep.txt_passwordSVP, str_Password);
		sel.click(EnvObjectMap_Rep.btn_loginSVP);
		utilityFunction.waitForChangesToReflect();
		assertTrue("Login_SVP","Verify that user is able to login to Social viewer portal.",date,sel.isElementPresent(EnvObjectMap_Rep.lnk_logOutSVP));
	}
}



	  